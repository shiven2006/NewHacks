<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/collection_background"
    tools:context=".CollectionActivity">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/left_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvCollectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🌿 My plant collection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 可滚动区域 -->
    <ScrollView
        android:id="@+id/scrollCollection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCollectionTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- 网格布局展示植物 -->
        <GridLayout
            android:id="@+id/gridPlants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- 示例植物 -->
            <ImageView
                android:id="@+id/plant1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/plant_ic_background"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:contentDescription="Plant 1" />

            <ImageView
                android:id="@+id/plant2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/plant_ic_background"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:contentDescription="Plant 2" />

            <ImageView
                android:id="@+id/plant3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/plant_ic_background"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:contentDescription="Plant 3" />

            <!-- 后续动态添加 -->
        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
